{
  "manifest_version": 3,
  "name": "Infojobs Tracker Extension",
  "version": "0.0.1",
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "./src/options.html"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["*://infojobs.net/*"],
      "js": ["./src/content.tsx"],
      "css": ["./src/globals.css"]
    }
  ]
}
